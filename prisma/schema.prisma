generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Catalogue {
  id              Int         @id
  name            String
  manufacturer    String
  daysTillExpired Int
  Inventory       Inventory[]
}

model Inventory {
  product        Catalogue @relation(fields: [productId], references: [id])
  expirationDate DateTime
  dateReceived   DateTime  @default(now())
  productId      Int
  quantity       Int

  @@id([dateReceived, productId])
}
